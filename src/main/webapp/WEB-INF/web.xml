<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<display-name>wmailbox</display-name>
	<context-param>
		<param-name>shiroEnvironmentClass</param-name>
		<param-value>cn.com.jinwang.security.JwWebEnvironment</param-value>
	</context-param>
	<context-param>
		<param-name>shiroConfigLocations</param-name>
		<param-value>/WEB-INF/shiro.ini</param-value>
	</context-param>
	<!-- <context-param> <param-name>wicket.configuration</param-name> <param-value>deployment</param-value> 
		</context-param> -->
	<listener>
		<listener-class>org.apache.shiro.web.env.EnvironmentLoaderListener</listener-class>
	</listener>

	<filter>
		<filter-name>ShiroFilter</filter-name>
		<filter-class>org.apache.shiro.web.servlet.ShiroFilter</filter-class>
	</filter>

	<!-- There are three means to configure Wickets configuration mode and they 
		are tested in the order given. 1) A system property: -Dwicket.configuration 
		2) servlet specific <init-param> 3) context specific <context-param> The 
		value might be either "development" (reloading when templates change) or 
		"deployment". If no configuration is found, "development" is the default. -->

	<filter>
		<filter-name>wicket.wmailbox</filter-name>
		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
		<init-param>
			<param-name>applicationClassName</param-name>
			<param-value>cn.com.jinwang.pages.WicketApplicationPlain</param-value>
		</init-param>
		<!-- 
		<init-param>
			<param-name>configuration</param-name>
			<param-value>deployment</param-value>
		</init-param>
		 -->
	</filter>

	<filter-mapping>
		<filter-name>ShiroFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>wicket.wmailbox</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>
